<thlogic>
    <attr sel="#headId"
          th:replace="~{fragments/head :: headFragment}"/>
    <attr sel="#game-welcome-message"
          th:text="#{game.welcome.message}"/>
    <attr sel="#main-message"
          th:text="${__${MAIN_MESSAGE}__}"/>
    <attr sel="#result-message"
          th:text="${__${RESULT_MESSAGE}__}"/>
    <attr sel="#game-form"
          th:action="${PLAY}"/>
    <attr sel="#enter-guess"
          th:text="#{game.enter.guess}"/>
    <attr sel="#submit-button"
          th:value="#{game.submit}"/>
    <attr sel="#footerId"
          th:replace="~{fragments/footer :: footerFragment}"/>
</thlogic>